{
  "name": "t3v/t3v_core",
  "type": "typo3-cms-extension",
  "description": "The core extension of TYPO3Voila.",
  "authors": [
    {
      "name": "Maik Kempe",
      "email": "mkempe@bitaculous.com",
      "homepage": "https://bitaculous.com"
    }
  ],
  "keywords": ["CMS", "Core", "Extension", "T3v", "TYPO3", "TYPO3voila", "UH LÁLÁ"],
  "homepage": "https://t3v.github.io/t3v_core/",
  "support": {
    "issues": "https://github.com/t3v/t3v_core/issues"
  },
  "license": "MIT",
  "config": {
    "bin-dir": ".build/bin",
    "vendor-dir": ".build/vendor"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "replace": {
    "typo3-ter/t3v_core": "self.version"
  },
  "repositories": [
    { "type": "composer", "url": "https://composer.typo3.org" }
  ],
  "require": {
    "php": ">= 7.0 < 7.5",
    "typo3/cms-core": "^8.7 || ^9.5",
    "kevinlebrun/colors.php": "^1.0",
    "danielstjules/stringy": "^3.1",
    "cocur/slugify": "^3.2"
  },
  "require-dev": {
    "mikey179/vfsstream": "^1.6",
    "namelesscoder/typo3-repository-client": "^2.0",
    "nimut/testing-framework": "^4.0",
    "phpunit/phpunit": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "T3v\\T3vCore\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "T3v\\T3vCore\\Tests\\": "Tests",
      "TYPO3\\CMS\\Core\\Tests\\": ".build/vendor/typo3/cms/typo3/sysext/core/Tests",
      "TYPO3\\CMS\\Fluid\\Tests\\": ".build/vendor/typo3/cms/typo3/sysext/fluid/Tests"
    }
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".build/web"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .build/web/typo3conf/ext/",
      "[ -L .build/web/typo3conf/ext/t3v_core ] || ln -snvf ../../../../. .build/web/typo3conf/ext/t3v_core"
    ]
  }
}
