{
  "name": "t3v/t3v_core",
  "type": "typo3-cms-extension",
  "description": "The core extension of TYPO3voilà.",
  "authors": [
    {
      "name": "Maik Kempe",
      "email": "mkempe@bitaculous.com",
      "role": "Developer"
    },
    {
      "name": "Jochen Greiner",
      "email": "greiner@monobloc.de",
      "role": "Developer"
    }
  ],
  "keywords": [
    "CMS",
    "Core",
    "Extension",
    "T3v",
    "TYPO3",
    "TYPO3voilà",
    "UH LÁLÁ"
  ],
  "homepage": "https://t3v.github.io/t3v_core/",
  "support": {
    "issues": "https://github.com/t3v/t3v_core/issues"
  },
  "license": "MIT",
  "config": {
    "allow-plugins": {
      "typo3/class-alias-loader": true,
      "typo3/cms-composer-installers": true
    },
    "bin-dir": ".build/bin",
    "vendor-dir": ".build/vendor"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "replace": {
    "typo3-ter/t3v_core": "self.version"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.typo3.org"
    }
  ],
  "require": {
    "php": ">= 7.4",
    "ext-pdo": "*",
    "typo3/cms-core": "^10.4.34 || ^11.5.22",
    "danielstjules/stringy": "^3.1",
    "cocur/slugify": "^4.3"
  },
  "require-dev": {
    "ext-dom": "*",
    "t3v/t3v_testing": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "T3v\\T3vCore\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "T3v\\T3vTesting\\Tests\\": ".build/web/typo3conf/ext/t3v_testing/Tests/",
      "T3v\\T3vCore\\Tests\\": "Tests"
    }
  },
  "extra": {
    "typo3/cms": {
      "app-dir": ".build",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "extension-key": "t3v_core",
      "web-dir": ".build/web"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .build/web/typo3conf/ext/",
      "[ -L .build/web/typo3conf/ext/t3v_core ] || ln -snvf ../../../../. .build/web/typo3conf/ext/t3v_core"
    ]
  }
}
