{
  "name": "t3v/t3v_core",
  "type": "typo3-cms-extension",
  "description": "The core extension of TYPO3Voila.",
  "authors": [
    {
      "name": "Maik Kempe",
      "email": "mkempe@bitaculous.com",
      "homepage": "https://bitaculous.com"
    }
  ],
  "keywords": [
    "CMS",
    "Core",
    "Extension",
    "T3v",
    "TYPO3",
    "TYPO3voila",
    "UH LÁLÁ"
  ],
  "homepage": "https://t3v.github.io/t3v_core/",
  "support": {
    "issues": "https://github.com/t3v/t3v_core/issues"
  },
  "license": "MIT",
  "config": {
    "bin-dir": ".Build/bin",
    "vendor-dir": ".Build/vendor"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "replace": {
    "t3v_core": "self.version",
    "typo3-ter/t3v_core": "self.version"
  },
  "repositories": [
    { "type": "composer", "url": "https://composer.typo3.org" }
  ],
  "require": {
    "php": ">= 5.6 < 7.2",
    "typo3/cms-core": "^7.6 || ^8.7",
    "kevinlebrun/colors.php": "~1.0.2"
  },
  "require-dev": {
    "mikey179/vfsStream": "~1.6.4",
    "namelesscoder/typo3-repository-client": "~1.3.1",
    "nimut/testing-framework": "~1.1.5",
    "phpunit/phpunit": "^5.7"
  },
  "autoload": {
    "psr-4": {
      "T3v\\T3vCore\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "T3v\\T3vCore\\Tests\\": "Tests",
      "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests",
      "TYPO3\\CMS\\Fluid\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/fluid/Tests"
    }
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/t3v_core ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/t3v_core"
    ]
  }
}