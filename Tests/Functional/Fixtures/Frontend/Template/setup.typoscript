# ------------------------
# | T3v Core Tests Setup |
# ------------------------

# === Configuration ===

config {
  # --- Common ---

  contentObjectExceptionHandler = 0
  disableAllHeaderCode = 1
  no_cache = 1
  sendCacheHeaders = 0
  xhtml_cleaning = 0

  # --- Localization ---

  sys_language_uid = 0
  sys_language_isocode_default = en
  language = en
  locale = en_US
  locale_all = en_US.UTF-8

  sys_language_mode = ignore
  sys_language_overlay = 0

  # Sets the `class` and `lang` attributes of the `html` tag:
  htmlTag_setParams = class="global en no-js" lang="en"

  # --- URL / Link Handling ---

  # HTTP GET parameters which should be passed on with links in TYPO3:
  linkVars = L(0-1)

  # Prefixes all links with a `/`, resulting in absolute link paths:
  absRefPrefix = /

  # --- Misc ---

  # Settings for the spam protection of email addresses:
  spamProtectEmailAddresses = 1
  spamProtectEmailAddresses_atSubst = &#64;
  spamProtectEmailAddresses_lastDotSubst = .

  # En-/disables the Admin-Panel:
  admPanel = 0

  # En-/disables the extra debug information as comment in the HTML code:
  debug = 0

  # Disables the prefix comments:
  disablePrefixComment = 1
}

# === Page ===

page = PAGE
page {
  10 = FLUIDTEMPLATE
  10 {
    file = EXT:t3v_core/Tests/Functional/Fixtures/Frontend/Template.html
  }
}

# === Locales ===

# --- Germany: Deutsch ---

[globalVar = GP:L = 1]
  config {
    sys_language_uid = 1
    sys_language_isocode = de
    language = de
    locale = de_DE
    locale_all = de_DE.UTF-8
    htmlTag_setParams = class="fr-fr fr no-js" lang="fr"
  }
[global]
